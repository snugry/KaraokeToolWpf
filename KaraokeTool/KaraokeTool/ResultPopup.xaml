<Window x:Class="KaraokeTool.ResultPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KaraokeTool"
        mc:Ignorable="d"
        Title="ResultPopup" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
            <RowDefinition Height="40*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="NameLabel" FontSize="24" Grid.ColumnSpan="2"></Label>
        <Label Grid.Row="1" Grid.ColumnSpan="2" FontSize="36" FontWeight="Bold">Your Song:</Label>
        <Label x:Name="SongLabel" FontSize="24" Grid.ColumnSpan="2" Grid.Row="2"></Label>
        <Button x:Name="GoBtn" Grid.Row="3" Grid.Column="0" FontSize="36" FontWeight="Bold" Click="GoBtn_Click">GO!</Button>
        <Button x:Name="AbortBtn" Grid.Row="3" Grid.Column="1" FontSize="36" FontWeight="Bold" Click="AbortBtn_Click">No</Button>
    </Grid>
</Window>
